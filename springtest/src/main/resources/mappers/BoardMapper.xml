<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.green.springtest.dao.BoardDao">
  <select id="getList" resultType="kr.green.springtest.vo.BoardVo">
    select * from board where isdel like "N" order by num desc limit 0, 10
  </select>
  <select id="getBoard" resultType="kr.green.springtest.vo.BoardVo">
  	select * from board where num = #{num}
  </select>
  <update id="increaseViews">
  	update board set views=views+1 where num=#{num}
  </update>
</mapper>